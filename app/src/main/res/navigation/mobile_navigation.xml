<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_startActivity"
        android:name="com.example.proglam.ui.startActivity.StartActivityFragment"
        android:label="@string/title_start_activity"
        tools:layout="@layout/fragment_start_activity" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.proglam.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_history"
            app:destination="@id/navigation_history" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_start_activity"
            app:destination="@id/navigation_startActivity" />
        <action
            android:id="@+id/action_navigation_dashboard_to_newActivityFragment"
            app:destination="@id/navigation_newActivity" />
        <action
            android:id="@+id/action_navigation_dashboard_to_activityRecordFragment"
            app:destination="@id/navigation_activityRecord" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_calendarActivity"
            app:destination="@id/navigation_calendarActivity" />
    </fragment>

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.proglam.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_navigation_history_to_listActivityFragment"
            app:destination="@id/navigation_calendarActivity" />
    </fragment>


    <fragment
        android:id="@+id/navigation_newActivity"
        android:name="com.example.proglam.ui.newActivity.NewActivityFragment"
        android:label="fragment_new_activity"
        tools:layout="@layout/fragment_new_activity" />
    <fragment
        android:id="@+id/navigation_calendarActivity"
        android:name="com.example.proglam.ui.history.calendar.HistoryCalendarFragment"
        android:label="fragment_list_activity"
        tools:layout="@layout/fragment_history_calendar">
        <action
            android:id="@+id/action_navigation_calendarActivity_to_activityRecordFragment"
            app:destination="@id/navigation_activityRecord" />
    </fragment>
    <fragment
        android:id="@+id/navigation_activityRecord"
        android:name="com.example.proglam.ui.activityRecord.ActivityRecordFragment"
        android:label="fragment_activity_record"
        tools:layout="@layout/fragment_activity_record">
    </fragment>


</navigation>